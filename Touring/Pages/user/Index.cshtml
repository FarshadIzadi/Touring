@page
@model Touring.Pages.user.IndexModel


<div class="p-0 m-0 sliderMain">
    <div class="container mx-auto d-flex flex-column justify-content-start mb-4 mx-2">
        <div class="d-flex flex-row justify-content-end align-items-center my-0" style="min-height:200px;">
            <div class="offset-1 col-7">
                <h1 class="text-white text-uppercase text-center" style="text-shadow:2px 2px 2px #808080;">Tour Title</h1>
            </div>
            <div class=" col-3 m-5 h-auto infoFrame">
                <p class="text-center text-white p-3 pb-1 text-justify overflow-hidden">There must be some treasure here in this afternoon. That's not all. You're walking on the ash of all those burned on piers of honor cause they defended these costs.</p>
                <a href="#"><h6 class="text-center text-uppercase text-green fw-bold pb-2 pt-0">Take this Tour</h6></a>
            </div>
        </div>
        <form method="post">
            <div class="tourSearch d-flex flex-column flex-lg-row px-0 justify-content-between align-items-center my-0 col-11 mx-auto">
                <div class="d-flex mx-5 align-items-center flex-column flex-md-row">
                    <span class="text-muted text-nowrap py-2">Find tours from </span>
                    <select class="fw-bold mx-3 form-select searchfield py-2" style="min-width:150px;" asp-items="@Model.originCountries"></select>
                    <span class="text-muted py-2">to</span>
                    <select class="fw-bold mx-3 form-select searchfield py-2" style="min-width:150px;" asp-items="@Model.destinationCountries"></select>
                </div>
                <button type="submit" class="btn searchBtn col-11 col-lg-3 d-flex justify-content-center align-items-center">
                    <h4 class="text-center  text-white">Find Tours</h4>
                </button>
            </div>
        </form>
    </div>
</div>