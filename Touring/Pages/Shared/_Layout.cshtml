@using Touring.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Touring</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body  class="overalStyle">
    @if (User.IsInRole(SD.RoleManager))
    {
        //https://bootstrapious.com/p/bootstrap-sidebar
        <div class="wrapper">
            <nav id="sidebar" class="bg-dark p-2">
                <div class="sidebar-header">
                    <h3 class="p-1">Touringo</h3>
                </div>
                <ul class="list-unstyled components">
                    <a asp-page="/Admin/Index" style="text-decoration:none;cursor:pointer;"><p>Dashboard</p></a>
                    <li class="active">
                        <a href="#homesubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Manage Tours</a>
                        <ul id="homesubmenu" class="collapse list-unstyled">
                            <li><a asp-page="/Admin/Tours/Create">Create Tour</a></li>
                            <li><a href="#">Modify Tours</a></li>
                            <li><a href="#">Tour History</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#pagesubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Pages</a>
                        <ul class="collapse list-unstyled" id="pagesubmenu">
                            <li><a href="#">Page1</a></li>
                            <li><a href="#">Page2</a></li>
                            <li><a href="#">Page3</a></li>
                        </ul>
                    </li>
                    <li><a href="#">portfolio</a></li>
                    <li><a href="#">contacts</a></li>
                </ul>
            </nav>
            <div id="content">

                <nav class="navbar navbar-expand" style="border-bottom:1px solid #808080;">
                    <div class="container-fluid">
                        <button type="button" class="btn btn-info" id="sidebarCollapse">
                            <i class="fas fa-align-left"></i>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>

                </nav>


                <div class="container p-3">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {

        <header>
            <nav style="border-bottom:1px solid #808080;" class="navbar navbar-expand-sm navbar-toggleable-sm bg-white box-shadow mb-3 text-white">
                <div class="container-fluid">
                    <a class="navbar-brand text-dark" asp-area="" asp-page="/Index">Touring</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="footer bg-dark text-muted">
        <div class="container">
            &copy; 2022 - Touring - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/7cbc151c47.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
